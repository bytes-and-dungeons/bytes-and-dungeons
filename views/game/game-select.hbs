<h1 class="text-center mb-5">Select One of your Characters to Play!</h1>

<div class="container">
    <div class="row">
        {{#each character}}
        <div class="card mx-auto mb-3 h-100 shadow-lg">
            <h3 class="card-header mb-2 border-0 rounded bg-success text-center">
                {{this.name}}
                <span class="badge bg-secondary">{{this.characterClass}}</span>
            </h3>
            <img class="card-img-top" src="{{this.charImgUrl}}" alt="Char Img" width="100" height="300">
            <div class="card-body">
                <h4 class="card-text">🎲 Level: {{this.level}}</h4>
                <h4>Attributes:</h4>
                <hr>
                <h4 class="card-text">❤️ Health: {{this.healthPoints}}</h4>
                <h4 class="card-text">💪🏻 Strength: {{this.strength}}</h4>
                <h4 class="card-text">🛡️ Defense: {{this.defense}}</h4>
                <h4 class="card-text">⭐ Exp. Points: {{this.experiencePoints}}</h4>

                <form action="/game" method="POST" class="text-center mt-3">
                    <input type="text" name="charId" value={{this._id}} class="visually-hidden">
                    <button type="submit" class="btn btn-success">CHOOSE!</button>
                </form>
            </div>
        </div>
        {{else}}
        <h3 class="text-center bg-danger">You don't Have Any Characters!</h3>
        {{/each}}
    </div>
</div>