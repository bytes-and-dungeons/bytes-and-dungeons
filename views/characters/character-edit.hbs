<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <form action="/characters/{{character._id}}/edit" method="POST" enctype="multipart/form-data">

        <div class="mb-3">
          <label class="form-label">Name:</label>
          <input type="text" name="name" class="form-control" placeholder="New name" value="{{character.name}}">
        </div>

        <div class="mb-3">
          <label class="form-label">Description:</label>
          <input type="text" name="description" class="form-control" placeholder="New description"
            value="{{character.description}}">
        </div>

        <div>
          <label class="form-label">New Image:</label>
          <input type="file" name="char-new-img" class="form-control">
          <input type="text" name="existingCharImage" hidden value="{{character.charImgUrl}}">
        </div>

        <div class="text-center mb-3 mt-3">
          <button type="submit" class="btn btn-success">Send Changes</button>
        </div>

        {{#if errorMessage}}
        <p class="error mt-5 text-bg-danger p-3 rounded">{{errorMessage}}</p>
        {{/if}}

      </form>
    </div>
  </div>
</div>