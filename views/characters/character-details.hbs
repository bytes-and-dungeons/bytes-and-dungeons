{{#if userIsOwner}}
<div class="text-center">
    <form action="/characters/{{character._id}}/edit" method="GET">
        <button class="btn btn-success">EDIT CHARACTER</button>
    </form>

    <form action="/characters/{{character._id}}/delete" method="POST">
        <button class="btn btn-danger">DELETE</button>
    </form>
</div>
{{/if}}

{{#if error}}
<div class="container d-flex justify-content-center">
    <div class="row">
        <div class="col-12 center-text">
            <h3 class="error center-text bg-danger p-3 rounded">{{error}}</h3>
        </div>
    </div>
    {{/if}}