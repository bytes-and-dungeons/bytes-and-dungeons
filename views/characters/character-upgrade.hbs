<h1 class="text-center mb-5">Upgrade your Character ✏️</h1>

<div class="container text-center">
    <div class="row">
        <div class="col-6">
            <h3>{{character.name}} Level {{character.level}}</h3>
            <p>{{character.description}}</p>
        </div>
        <div class="col-6">
            <div class="bg-danger p-2 rounded">
                Experience Points <br>
                ⭐
                {{character.experiencePoints}}
            </div>
        </div>
        <hr>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="col-12 col-xl-6">
            <form action="/characters/{{character._id}}/upgrade" method="POST">

                <div class="mb-3 bg-primary p-2 rounded">
                    <label class="form-label">Health Points: <strong>{{character.healthPoints}}</strong></label>
                    <p>❤️</p>
                    <input type="text" name="healthPoints" class="form-control" placeholder="New health points..."
                        value="0">
                </div>

                <div class="mb-3 bg-success p-2 rounded">
                    <label class="form-label">Strength: <strong>{{character.strength}}</strong></label>
                    <p>💪🏻</p>
                    <input type="text" name="strength" min="0" class="form-control" placeholder="New strength..."
                        value="0">
                </div>

                <div class="mb-3 bg-warning p-2 rounded">
                    <label class="form-label">Defense: <strong>{{character.defense}}</strong></label>
                    <p>🛡️</p>
                    <input type="text" name="defense" min="0" class="form-control" placeholder="New defense..."
                        value="0">
                </div>

                <button class="btn btn-info">Save Changes</button>

            </form>
        </div>
    </div>
</div>

{{#if error}}
<div class="container d-flex justify-content-center">
    <div class="row">
        <div class="col-12 center-text">
            <h3 class="error center-text bg-danger p-3 rounded">{{error}}</h3>
        </div>
    </div>
    {{/if}}