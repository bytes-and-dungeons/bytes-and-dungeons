<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <form action="/auth/signup" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
          <label class="form-label">Username:</label>
          <input type="text" name="username" class="form-control" placeholder="Your username"
            aria-describedby="usernameHelp">
          <div id="usernameHelp" class="form-text">Username may be not unique!</div>
        </div>

        <div class="mb-3">
          <label class="form-label">Email:</label>
          <input type="email" name="email" class="form-control" placeholder="Your email" aria-describedby="emailHelp">
          <div id="emailHelp" class="form-text">We won't share your email with anyone.</div>
        </div>

        <div class="mb-3 custom-file">
          <label class="custom-file-label">Password:</label>
          <input type="password" name="password" class="form-control" placeholder="Your password"
            aria-describedby="passwordHelp">
          <div id="passwordHelp" class="form-text">Don't forget this one!!!</div>
        </div>

        <div class="mb-3">
          <label>Add your profile pic and your banner:</label>
          <input name="profile-images" type="file" class="file" data-show-upload="true" data-show-caption="true"
            multiple>
        </div>

        <div class="text-center">
          <button type="submit" class="btn btn-success">Register</button>
        </div>

        {{#if errorMessage}}
        <p class="error mt-5 text-bg-danger p-3 rounded">{{errorMessage}}</p>
        {{/if}}

      </form>
    </div>
  </div>
</div>